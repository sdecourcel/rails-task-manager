<h1>Tasks#show</h1>
<!-- <p>Find me in app/views/tasks/show.html.erb</p> -->

<h1><%= @task.content %></h1>

<% @task.done ? check = '[X]' : check = '[ ]' %>
<p>Status : <%=  check %></p>

<p>Created at : <%= @task.created_at %></p>

<p><%= link_to 'Edit task', edit_task_path(@task) %></p>
<p><%= link_to 'Delete task', task_path(@task), method: :delete %></p>
<p><%= link_to 'Back to all tasks', tasks_path %></p>

